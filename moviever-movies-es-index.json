PUT /movies
{
  "mappings": {
    "properties": {
      "_class": {
        "type": "keyword",
        "index": false,
        "doc_values": false
      },
      "categories": {
        "properties": {
          "categoryType": {
            "type": "text",
            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      },
      "movieId": {
        "type": "long"
      },
      "posterUrl": {
        "type": "text"
      },
      "releaseYear": {
        "type": "long"
      },
      "title": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      }
    }
  },
  "settings": {
    "index": {
      "routing": {
        "allocation": {
          "include": {
            "_tier_preference": "data_content"
          }
        }
      },
      "refresh_interval": "3s",
      "number_of_shards": "3",
      "number_of_replicas": "2"
    }
  }
}
